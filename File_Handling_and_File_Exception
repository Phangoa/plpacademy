def modify_and_copy_file():
    """
    Reads a file, modifies its content (in this case, adds line numbers),
    and writes the modified content to a new file.  Also includes error handling
    for file operations.
    """

    try:
        input_filename = input("Enter the name of the input file: ")

        with open(input_filename, 'r') as infile:
            lines = infile.readlines()

        output_filename = input("Enter the name of the output file: ")

        with open(output_filename, 'w') as outfile:
            for i, line in enumerate(lines):
                modified_line = f"{i + 1}: {line}"  # Add line number
                outfile.write(modified_line)

        print(f"File '{input_filename}' successfully read, modified, and written to '{output_filename}'.")

    except FileNotFoundError:
        print(f"Error: File '{input_filename}' not found.")
    except PermissionError:
        print(f"Error: Permission denied to read or write the file.")
    except Exception as e:
        print(f"An unexpected error occurred: {e}")



# Run the function
if __name__ == "__main__":
    modify_and_copy_file()